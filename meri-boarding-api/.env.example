PORT=4000
HOST=0.0.0.0

MONGODB_URI=mongodb://127.0.0.1:27018
MONGODB_DB=meri_boarding

ADMIN_TOKEN_SECRET=CHANGE_ME_LONG_RANDOM_SECRET
ADMIN_TOKEN_HOURS=12
SEED_HOTELS_ON_START=false

# Admin bootstrap:
# If there is no active super_admin in DB, the first /api/v1/auth/register user
# is created as super_admin automatically.

CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Contact form SMTP notification
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_STARTTLS=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Comma-separated recipient emails for contact form notifications.
# If empty, API tries to derive recipients from contact content email items.
CONTACT_FORM_TO=
